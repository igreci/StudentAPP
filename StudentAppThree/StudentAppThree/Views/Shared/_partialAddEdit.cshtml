@model StudentAppThree.Models.MainPageViewModel


    <form id="addEditForm">
        @Html.HiddenFor(model => Model.MyProperty.PopisId)

        @Html.DropDownListFor(model => Model.MyProperty.Kolegij.KolegijId, ViewBag.Kolegij as SelectList, "-- Odaberi Kolegij--", new { @class = "form-Control" })

        @Html.DropDownListFor(model => Model.MyProperty.Studenti.StudentId, ViewBag.Studenti as SelectList, "-- Odaberi Studenta --", new { @class = "form-Control" })

        <a href="#" id="btnSubmit" class="btn btn-outline-primary">
            @if (Model.MyProperty.PopisId > 0)
            {<span>Uredi postojeći</span>}
            else
            { <span>Novi Upis</span>}
    </a>



</form>

